{
	"compilerOptions": {
		"allowJs": false,
		"module": "commonjs",
		"target": "es5",
		"lib": [ "es6", "dom" ],
		"sourceMap": true,
		"declaration": true,
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules",
			"./src/defs"
		],
		"types": [ "node" ],
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [ 
		"./src/api/*.ts" ],
	//"files": [ "app.ts" ],
	"exclude": [
		"node_modules"
	]
}
