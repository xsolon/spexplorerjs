{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"allowJs": false,
		"typeRoots": [
			"./node_modules/@types"
			//,"./src/defs"
		],
		"moduleResolution": "node",
		"declaration": true,
		"types": [
			"node",
		],
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"./src/backups/backups.node.ts",
		"./src/widgets/sample1.ts",
		"dist"
	]
}