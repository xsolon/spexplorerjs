{
	"compilerOptions": {
		"allowJs": false,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"declaration": true,
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules",
			"./src/defs"
		],
		"types": [
			"node"
		],
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts"
	],
	//"files": [ "app.ts" ],
	"exclude": [
		"node_modules"
	]
}